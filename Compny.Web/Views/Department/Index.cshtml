@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}
<a asp-action="Department" asp-action="Create" class="btn btn-primary">Create New Department </a>
@if(Model.Count()>0)
{
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(D => D.Code)</th>
            <th>@Html.DisplayNameFor(D => D.Name)</th>
            <th>@Html.DisplayNameFor(D => D.CreateAt)</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.Code</td>
                <td>@department.Name</td>
                <td>@department.CreateAt</td>
                <td>
                    <a asp-action="Details" asp-route-id="depatment.Id" class="btn btn-warning">
                        <i class="fas fa-eye"></i> Details
                    </a>
                </td>
                <td>
                    <a asp-action="Update" asp-route-id="depatment.Id" class="btn btn-success">
                        <i class="fas fa-edit"></i> Update
                    </a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="depatment.Id" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
}
else{
<div class="mt-5 alert alert-warning">
    <h3>There is no Department</h3>
</div>
}